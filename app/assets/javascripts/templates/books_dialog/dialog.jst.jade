.modal.fade#books-search-dialog
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button", data-dismiss="modal", aria-label="Close")
					span(aria-hidden="true") &times;
				h4= options['title']

			.modal-body
				.container-fluid
					.row
						.col-md-4.books-sidebar
						.col-md-8.main-content

			.modal-footer
				button(type="button", class="btn btn-default", data-dismiss="modal") Close
				button(type="button", class="btn btn-primary") Select Book